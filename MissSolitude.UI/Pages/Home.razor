@page "/"

<PageTitle>Overview</PageTitle>

<!-- CRITICAL: This class triggers the CSS. Do not remove this div. -->
<div class="dashboard-layout">
    <div class="dashboard-container">
        
        <header class="dashboard-header">
            <div class="header-content">
                <h1>Overview</h1>
                <p>Welcome back to Miss Solitude.</p>
            </div>
            <div class="header-actions">
                <button class="btn btn-secondary">Reports</button>
                <button class="btn btn-primary">New Contact</button>
            </div>
        </header>

        <!-- Stats Overview -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
                </div>
                <div class="stat-content">
                    <span class="stat-label">Total Contacts</span>
                    <span class="stat-value">1,284</span>
                    <span class="stat-trend positive">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="23 6 13.5 15.5 8.5 10.5 1 18"/><polyline points="17 6 23 6 23 12"/></svg>
                        +12%
                    </span>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon purple">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="3" width="20" height="14" rx="2" ry="2"/><line x1="8" y1="21" x2="16" y2="21"/><line x1="12" y1="17" x2="12" y2="21"/></svg>
                </div>
                <div class="stat-content">
                    <span class="stat-label">Active Sessions</span>
                    <span class="stat-value">42</span>
                    <span class="stat-trend">Stable</span>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon green">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="22 12 18 12 15 21 9 3 6 12 2 12"/></svg>
                </div>
                <div class="stat-content">
                    <span class="stat-label">System Health</span>
                    <span class="stat-value">99.9%</span>
                    <span class="stat-trend positive">Good</span>
                </div>
            </div>
        </div>

        <!-- Content Grid -->
        <div class="content-grid">
            
            <!-- Activity Feed -->
            <div class="content-card-inner">
                <div class="card-header">
                    <h3>Recent Activity</h3>
                    <a href="#" class="link-reset">View All</a>
                </div>
                <div class="activity-list">
                    <div class="activity-item">
                        <div class="avatar">JD</div>
                        <div class="activity-details">
                            <span class="activity-text"><strong>John Doe</strong> created a user.</span>
                            <span class="activity-time">2 mins ago</span>
                        </div>
                    </div>
                    <div class="activity-item">
                        <div class="avatar purple">AS</div>
                        <div class="activity-details">
                            <span class="activity-text"><strong>Alice Smith</strong> updated settings.</span>
                            <span class="activity-time">1 hr ago</span>
                        </div>
                    </div>
                     <div class="activity-item">
                        <div class="avatar green">SY</div>
                        <div class="activity-details">
                            <span class="activity-text"><strong>System</strong> completed backup.</span>
                            <span class="activity-time">4 hrs ago</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Server Status -->
            <div class="content-card-inner">
                <div class="card-header">
                    <h3>Status</h3>
                </div>
                <div class="server-status">
                    <div class="status-row">
                        <div class="status-info">
                            <span>CPU</span>
                            <span class="value">45%</span>
                        </div>
                        <div class="progress-bar"><div class="fill" style="width: 45%"></div></div>
                    </div>
                    <div class="status-row">
                        <div class="status-info">
                            <span>Memory</span>
                            <span class="value warning">78%</span>
                        </div>
                        <div class="progress-bar"><div class="fill warning" style="width: 78%"></div></div>
                    </div>
                </div>
                
                <div class="card-divider"></div>
                
                <div class="info-box">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="12" y1="16" x2="12" y2="12"/><line x1="12" y1="8" x2="12.01" y2="8"/></svg>
                    <p>Maintenance: Sun 2:00 AM</p>
                </div>
            </div>
        </div>
        
    </div>
</div>

